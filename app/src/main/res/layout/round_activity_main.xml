<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nowor_000.circledimageview.MainActivity"
    tools:deviceIds="wear_round">

    <android.support.wearable.view.CircledImageView
        android:id="@+id/viewInformation"
        app:circle_color="#1919ff"
        app:circle_radius="50dp"
        app:circle_border_width="10dip"
        app:circle_border_color="#9999ff"
        android:src="@android:drawable/ic_dialog_info"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


    <android.support.wearable.view.CircledImageView
        android:id="@+id/viewAlert"
        app:circle_color="#e50000"
        app:circle_radius="50dp"
        app:circle_border_width="10dip"
        app:circle_border_color="#7f0000"
        android:src="@android:drawable/ic_dialog_alert"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/viewInformation"
        android:layout_alignParentEnd="true" />

    <android.support.wearable.view.CircledImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view2"
        android:layout_below="@+id/viewInformation"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
